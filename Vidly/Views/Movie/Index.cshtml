@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Movie</th>
            <th scope="col">Genre</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <text>There is no movie yet</text>
        }
        else
        {

            foreach (var movie in Model)
            {
        <tr>
            <th scope="row">@movie.Id</th>
            <th>@Html.ActionLink(movie.Name, "Details", new { id = movie.Id }, null)</th>
            <th scope="row">@movie.Genre.Name</th>
        </tr>

            }
        }
    </tbody>
</table>

